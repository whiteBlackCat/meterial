@import "../../style/loading.wxss";

page{
     height: 100%;
 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #ffffff;
}

.title{
  clear: both;
  font-size: 35rpx;
  margin: 30rpx 0rpx 0rpx 20rpx;
}

.singleChoice{
  width: 100%;
  margin: 30rpx 20rpx 0rpx 30rpx;
}

.singleChoiceItemCorrect{
  float: left;
  margin: 0rpx 50rpx 30rpx 0rpx;
  width: 25px;
  height: 25px;
  background-color: #1bd0bd;
  color: white;
  text-align: center;
  border-radius: 100px;
  border:1px #1bd0bd solid;
  justify-content:center;
  display:flex;
  align-items:center;
}

.singleChoiceItemError{
  float: left;
  margin: 0rpx 50rpx 30rpx 0rpx;
  width: 25px;
  height: 25px;
  background-color: #f2403c;
  color: white;
  text-align: center;
  border-radius: 100px;
  border:1px #f2403c solid;
  justify-content:center;
  display:flex;
  align-items:center;
}

.singleChoiceItemBlank{
  float: left;
  margin: 0rpx 50rpx 30rpx 0rpx;
  width: 25px;
  height: 25px;
  background-color: white;
  color: #1bd0bd;
  text-align: center;
  border-radius: 100px;
  border:1px #1bd0bd solid;
  justify-content:center;
  display:flex;
