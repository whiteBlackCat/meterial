page {
  background-image: url('http://ac-ejx0nsfy.clouddn.com/63b16b4e8af1b7130263.jpg');
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
}

.board {
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
  border-bottom: 2rpx solid #eee;
}

.board::active {
  background: #eee;
}

.board-info {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.board-title {
  width: 100%;
  height: 80rpx;
  font-size: 40rpx;
  padding-top: 20rpx;
  background-color: #eee;
  text-align: center;
}

/**麦克风*/

.speak-style {
  position: fixed;
  height: 240rpx;
  width: 240rpx;
  top: 100rpx;
  left: 255rpx;
  border-radius: 20rpx;
  margin: 50% auto;
  background: #26a5ff;
}

.sound-style {
  position: absolute;
  width: 74rpx;
