/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.form-item {
  margin: 20rpx;
  padding: 20rpx 0;
  border: 1rpx solid #ccc;
}

.form-item .label {
  width: 180rpx;
  /*与input同高  */
  height: 52rpx;
  /* min-height: 52rpx; */
  text-align: center;
}

.form-item .item {
  padding-left: 20rpx;
  border-left: 1rpx solid #ccc;
}

.form-item .label::after {
  content: '';
  display: inline-block;
  height: 100%;
  width: 1rpx;
  vertical-align: middle;
}


.qrcode-box{
  padding: 20rpx 35rpx;
}
.qrcode-box>image{
  width: 430rpx;
  height: 430rpx;
  background: #ccc;
}